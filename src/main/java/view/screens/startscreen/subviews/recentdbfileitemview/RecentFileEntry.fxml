<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox fillWidth="false" onMouseClicked="#itemSelected" prefWidth="300.0" spacing="5.0" style="-fx-border-color: black; -fx-border-radius: 20; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.screens.startscreen.subviews.recentdbfileitemview.RecentFileEntryPresenter">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="Title" wrapText="true">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <Label text="%label.status">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </Label>
      <Label fx:id="pathStatusLbl" text="pathStatusLbl">
         <padding>
            <Insets bottom="5.0" left="10.0" right="5.0" />
         </padding>
      </Label>
      <Label fx:id="pathLabel" text="%label.path_status" wrapText="true">
         <padding>
            <Insets bottom="5.0" left="10.0" right="5.0" />
         </padding>
      </Label>
      <MenuButton alignment="CENTER" mnemonicParsing="false" popupSide="RIGHT">
        <items>
          <MenuItem fx:id="openItemMenuItem" mnemonicParsing="false" onAction="#openItem" text="%button.open" />
          <MenuItem fx:id="removeItemMenuItem" mnemonicParsing="false" onAction="#removeItem" text="%button.remove" />
            <MenuItem fx:id="deleteFileMenuItem" mnemonicParsing="false" onAction="#deleteFile" text="%button.delete" />
        </items>
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="5.0" />
         </VBox.margin>
      </MenuButton>
   </children>
</VBox>
