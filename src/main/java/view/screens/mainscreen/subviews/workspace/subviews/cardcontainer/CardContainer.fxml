<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardContainer" prefHeight="300.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.screens.mainscreen.subviews.workspace.subviews.cardcontainer.CardContainerPresenter">
   <children>
      <HBox spacing="5.0">
         <children>
            <Label text="Card: " />
            <Label fx:id="cardTitleLbl" layoutX="10.0" layoutY="10.0" text="cardTitleLbl" />
         </children>
      </HBox>
      <Accordion>
        <panes>
          <TitledPane text="Details">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ToolBar>
                           <items>
                                  <Button fx:id="editCardDetailsBtn" mnemonicParsing="false" onAction="#editCardDetails" text="Edit Details" />
                              <Button fx:id="saveCardDetailsBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#saveCardDetails" text="Save" />
                           </items>
                        </ToolBar>
                        <Label text="Title:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="cardTitleTextField" editable="false" />
                        <Label text="Description" />
                          <TextArea fx:id="cardDescriptionTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                     </children>
                  </VBox>
               </content>
            </TitledPane>
          <TitledPane expanded="false" text="Related Items">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Related Item" />
                        <ToolBar>
                           <items>
                              <Button mnemonicParsing="false" onAction="#addRelatedItem" text="Add" />
                              <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#editRelatedItem" text="Edit" />
                              <Button layoutX="52.0" layoutY="10.0" mnemonicParsing="false" onAction="#removeRelatedItem" text="Remove" />
                           </items>
                        </ToolBar>
                        <TableView fx:id="relatedItemTableView" prefHeight="55.0">
                          <columns>
                            <TableColumn fx:id="relatedItemTitleTableColumn" prefWidth="75.0" text="Title" />
                            <TableColumn fx:id="relatedItemTypeTableCol" prefWidth="75.0" text="Type" />
                              <TableColumn fx:id="relatedItemLinkTableCol" prefWidth="75.0" text="Link" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
        </panes>
      </Accordion>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
