<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" minHeight="560.0" minViewportHeight="560.0" minViewportWidth="440.0" minWidth="440.0" prefHeight="560.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.components.project.editor.projectdetails.ProjectDetailsWindowPresenter">
   <content>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="550.0" minWidth="420.0">
         <top>
            <VBox spacing="2.0">
               <children>
                  <Label text="Project Details" />
                  <Label fx:id="popupStateLbl" layoutX="10.0" layoutY="10.0" />
                  <Separator prefWidth="200.0" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="15.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </top>
         <center>
            <VBox spacing="10.0">
               <children>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" text="Title:" />
                        <TextField fx:id="projectTitleTextField">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <Label fx:id="titleErrorLbl" text="TitleError" textFill="#ff4b4b" underline="true">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" text="Description:" />
                        <TextArea fx:id="projectDescriptionTextArea" minHeight="100.0" prefHeight="100.0" wrapText="true">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextArea>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Status" />
                        <ChoiceBox fx:id="statusChoiceBox" prefWidth="150.0" />
                        <Label text="Status explanations?" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Due on" />
                        <DatePicker fx:id="dueOnDatePicker" />
                        <Label text="ERRORS" />
                     </children>
                  </VBox>
                  <VBox layoutX="15.0" layoutY="287.0">
                     <children>
                        <Label text="Created on" />
                        <TextField fx:id="createdOnTextField" editable="false" />
                     </children>
                  </VBox>
                  <VBox layoutX="15.0" layoutY="358.0">
                     <children>
                        <Label text="Last Changed" />
                        <TextField fx:id="lastChangedTextField" editable="false" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="15.0" top="15.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <bottom>
            <ButtonBar>
               <buttons>
                  <Button fx:id="saveBtn" defaultButton="true" mnemonicParsing="false" onAction="#saveProjectDetailsChange" text="%button.save" />
                  <Button fx:id="cancelBtn" cancelButton="true" layoutX="535.0" layoutY="17.0" mnemonicParsing="false" onAction="#cancelProjectDetailsChange" text="%button.cancel" />
               </buttons>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ButtonBar>
         </bottom>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </BorderPane>
   </content>
</ScrollPane>
