<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.components.card.editor.CardEditorPresenter">
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" minViewportHeight="400.0" minViewportWidth="400.0">
         <content>
            <VBox fx:id="contentVBox" minWidth="400.0" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <ButtonBar fx:id="buttonBar" buttonOrder="" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#save" text="%button.save" fx:id="saveBtn"/>
            <Button cancelButton="true" layoutX="339.0" layoutY="17.0" mnemonicParsing="false" onAction="#cancel" text="%button.cancel" fx:id="cancelBtn"/>
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets right="5.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
